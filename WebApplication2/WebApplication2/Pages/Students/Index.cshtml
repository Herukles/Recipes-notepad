@page
@model WebApplication2.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Przepisy</h1>

<p>
    <a asp-page="Create">stwórz nowy przepis</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               
                nazwa
            </th>
            <th>
               
                składniki, opis
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
           
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edytuj</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">szczegóły</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
