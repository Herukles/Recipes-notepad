@page
@model WebApplication2.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>usuń przepis</h1>

<h3>Na pewno chcesz to usunąć?</h3>
<div>
    <h4>przepis</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
           składniki, opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>
        
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Student.ID" />
        <input type="submit" value="usuń" class="btn btn-danger" /> 
        <a asp-page="./Index">wróć</a>
    </form>
</div>
